<!DOCTYPE html>
<html lang="es">
<script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Alexandria:wght@400;700&display=swap" rel="stylesheet">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ParkPoint</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alexandria:wght@100..900&display=swap" rel="stylesheet">
</head>


    
<body class="bg-gray-100">
    <div class="gradient-bg p-2 flex items-center justify-between">
        <div class="flex items-center">
            <img class = "logoheader" src = "~/img/logosolo.png"/>
        </div>
        <div class="flex items-center space-x-4 text-white ml-auto mr-8 mt-2">
            <a class="hover:underline" href="#">Inicio</a>
            <a class="hover:underline" href="#">Puntos</a>
            <a class="hover:underline" href="#">Reportar información</a>
            <a class="hover:underline" href="#">Estacionar</a>
            <a class="hover:underline" href="#">Ayuda</a>
        </div>
        <div class="flex items-center space-x-4 text-white mt-2">
            <i class="fas fa-bell text-3xl"></i>
            <i class="fas fa-user-circle text-3xl"></i>
        </div>
    </div>
</body>
    <main role="main">
        @RenderBody()
    </main>


<footer class="footer">
<img src="~/img/logogrande.png" alt="ParkPoint Logo" class="logo" />
<div class="container">
    <div class="col">
        <div class="row">
        
        </div>
        <div class="row">
            <div class="col-md-4">
                <h3>Sobre nosotros</h3>
                <ul>
                    <li><a href="#">Trabaja con ParkPoint</a></li>
                    <li><a href="#">Novedades</a></li>
                    <li><a href="#">Contacto</a></li>
                    <li><a href="#">Acerca de ParkPoint</a></li>
                </ul>
            </div>
            <div class="col-md-4">
                <h3>Ayuda</h3>
                <ul>
                    <li><a href="#">Servicio al cliente</a></li>
                    <li><a href="#">Preguntas frecuentes</a></li>
                    <li><a href="#">Recomendaciones de la app</a></li>
                    <li><a href="#">Cómo funciona</a></li>
                </ul>
            </div>
            <div class="col-md-4">
                <h3>Política</h3>
                <ul>
                    <li><a href="#">Política de privacidad</a></li>
                    <li><a href="#">Términos y condiciones</a></li>
                </ul>
                <div class="social-icons">
                    <a href="#"> <img src = "~/img/facebook_footer.png"/></a>
                    <a href="#"> <img src = "~/img/instagram_footer.png"/></a>
                    <a href="#"> <img src = "~/img/x_footer.avif"/></a>
                    
                </div>
            </div>
        </div>
    </div>
</div>
<p class = "Copyright"> Copyright &copy; - ParkPoint @DateTime.Now.Year </p>
</footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</html>
