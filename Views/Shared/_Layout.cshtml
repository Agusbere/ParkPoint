<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ParkPoint</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alexandria:wght@100..900&display=swap" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="~/img/logosolo.png">
</head>

@if(!ViewContext.View.Path.Contains("/LandingPage") && !ViewContext.View.Path.Contains("/Registro1") && !ViewContext.View.Path.Contains("/Registro2") ){
    <header>
    <a href = "@Url.Action("Index")"> <img class="logoheader" src="~/img/logosolo.png"/> </a>
    <nav>
        <a href="@Url.Action("Index")">Inicio</a>
        <a href="@Url.Action("Puntos")">Puntos</a>
        <a href="@Url.Action("Reportar")">Reportar infracción</a>
        <a href="@Url.Action("Ayuda")">Ayuda</a>
    </nav>
    <div class="botones-header">
        <a onclick="MostrarNotificaciones(@ViewBag.Id_usuario)"> <img class="notis" src="~/img/campana-header.png" alt="notificaciones"> </a>
        <a href = "@Url.Action("Registro1")"><img class="perfil" src="~/img/perfil.png" alt="perfil"> </a>
    </div>
</header>

}


<main role="main">
    @if (!ViewContext.View.Path.Contains("/Index") && !ViewContext.View.Path.Contains("/Registro1") && !ViewContext.View.Path.Contains("/Registro2"))
    {
        <h1
            style="position: relative; top: 38px; left: 31px; color: #171D8D; font-size: 48px; font-weight: bold;">
            @ViewData["Title"]</h1>

        @if (ViewContext.View.Path.Contains("/Estacionar"))
        {
            <style>
                .contenedor-main {
                    display: flex;
                    justify-content: center;
                    height: 820px;
                }
            </style>
            <h4 style="position: relative; top: 35px; left: 31px; font-size: 23px;">Gestiona fácilmente el estacionamiento de tu
                vehículo. Ingresa la información necesaria para seleccionar un lugar de estacionamiento disponible.
            </h4>
        }
        else
        {
            <style>
                .contenedor-main {
                    display: flex;
                    justify-content: center;
                    height: 855px;
                }
            </style>
        }
    }
    @RenderBody()
</main>

@if (!ViewContext.View.Path.Contains("/Registro1") &&  !ViewContext.View.Path.Contains("/Index") && !ViewContext.View.Path.Contains("/Registro2") ){

<footer>
    <img src="~/img/logogrande.png" alt="ParkPoint Logo" class="logo" />
    <div class="contenedor-footer">
        <div class="columna">
            <h3>Sobre nosotros</h3>
            <ul>
                <li><a href="#">Trabaja con ParkPoint</a></li>
                <li><a href="#">Novedades</a></li>
                <li><a href="#">Contacto</a></li>
                <li><a href="#">Acerca de ParkPoint</a></li>
            </ul>
        </div>
        <div class="columna">
            <h3>Ayuda</h3>
            <ul>
                <li><a href="#">Servicio al cliente</a></li>
                <li><a href="#">Preguntas frecuentes</a></li>
                <li><a href="#">Recomendaciones de la app</a></li>
                <li><a href="#">Cómo funciona</a></li>
            </ul>
        </div>
        <div class="columna">
            <h3>Política</h3>
            <ul>
                <li><a href="#">Política de privacidad</a></li>
                <li><a href="#">Términos y condiciones</a></li>
            </ul>
        </div>
        <div class="redes-sociales">
            <a href="#"> <img src="~/img/facebook.png" /></a>
            <a href="#"> <img src="~/img/instagram.png" /></a>
            <a href="#"> <img src="~/img/x.png" /></a>
            <a href="#"> <img src="~/img/youtube.png" /></a>
        </div>
    </div>
    <p class="Copyright"> Copyright &copy; - ParkPoint @DateTime.Now.Year </p>
</footer>
}

<script src="~/js/site.js" asp-append-version="true"></script>
</html>
