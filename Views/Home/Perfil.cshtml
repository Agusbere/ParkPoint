@{
    ViewData["Title"] = "PERFIL";
    var usuario = ViewData["Usuario"] as Usuario;
    var auto = ViewData["Auto"] as Auto;
}
<div class="contenedor-main">

    <div class="logo-perfil">
        <img src="~/img/foto-perfil.jpg" class="foto-perfil" />
    </div>

    <div class="elementos-perfil">
        <div class="elemento-perfil">
            <label class="nombre-perfil"> Nombre</label>
            <input readonly type="text" class="input-perfil" value="@usuario.nombre" />
        </div>
        <div class="elemento-perfil">
            <label class="nombre-perfil"> Apellido</label>
            <input readonly type="text" class="input-perfil" value="@usuario.apellido" />
        </div>
        <div class="elemento-perfil">
            <label class="nombre-perfil"> Marca del vehículo</label>
            <input readonly type="text" class="input-perfil" value="@BD.ListarMarcas().FirstOrDefault(m => m.id_marca == auto.id_marca)?.nombre_marca" />
        </div>
        <div class="elemento-perfil">
            <label class="nombre-perfil"> Patente</label>
            <input readonly type="text" class="input-perfil" value="@auto.patente" />
        </div>
    </div>

    <a href="@Url.Action("CerrarSesion")" class="cerrar-sesion">Cerrar Sesión</a>

</div>
