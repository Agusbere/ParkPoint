@{
    ViewData["Title"] = "PERFIL";
    var usuario = ViewData["Usuario"] as Usuario;
    var auto = ViewData["Auto"] as Auto;
}
<div class="contenedor-main">

   <div class="logo-perfil">
    <img src="~/img/foto-perfil.jpg" class="foto-perfil" />
   </div>

   <div class="elementos-perfil">

    <div class ="elemento-perfil"> <label class="nombre-perfil"> Nombre</label> <input readonly type="text" class="input-perfil"> @usuario.nombre </div>
    <div class ="elemento-perfil"><label class="nombre-perfil"> Apellido</label> <input readonly type="text" class="input-perfil">@usuario.apellido </div>
    <div class ="elemento-perfil"><label class="nombre-perfil"> Marca del veh√≠culo</label> @BD.ListarMarcas().FirstOrDefault(m => m.id_marca == auto.id_marca)?.nombre_marca<input readonly type="text" class="input-perfil"></div>
    <div class ="elemento-perfil"><label class="nombre-perfil"> Patente</label> @auto.patente <input readonly type="text" class="input-perfil"></div>
   </div>

   <a href="@Url.Action("CerrarSesion")"> Cerrar Sesion</a>

</div>